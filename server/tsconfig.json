{
    "compilerOptions": {
        "rootDirs": ["server"],
        "outDir": "./dist",
        "lib": ["es2021"],
        "target": "es2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "types": ["node", "vitest/globals"],
        "sourceMap": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
